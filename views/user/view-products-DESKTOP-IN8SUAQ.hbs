<section>
    <div class="container mt-3">
        <div class="row">
            {{#each products}}

            <div class="col-md-3 p-3">
                <div class="card" style="width: 13rem; height:25rem">
                    <img src="/product-images/{{this._id}}.jpg"
                     class="card-img-top"
                     style="height :14rem" alt="card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">Rs.{{this.price}}</p>
                        <p class="card-text">{{this.Description}}</p>

                        <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
                    </div>
                </div>

            </div>
            {{/each}}
        </div>
    </div>
</section>
